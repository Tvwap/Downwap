<script>
    // --- Configuration ---
    const CATEGORIES = {
        'Bollywood': 'https://live4wap.neocities.org/film.txt',
        'South': 'https://live4wap.neocities.org/South.txt',
        'Hollywood': 'https://live4wap.neocities.org/Hollywood.txt',
        'Other': 'https://live4wap.neocities.org/other.txt'
    };
    
    // THE PROXY URL FOR STREAMING
    const PROXY_URL = 'https://www.livereacting.com/tools/mp4-player-embed?url=';
    
    // DOWNLOAD ICON - Font Awesome class for cloud download
    const DOWNLOAD_ICON_HTML = '<i class="fa fa-cloud-download"></i>'; 
    
    let currentCategoryUrl = CATEGORIES.Bollywood; 
    
    // --- DOM Elements ---
    const streamIframe = document.getElementById('streamIframe');
    const matchListContainer = document.getElementById('match-list-container');
    const serverButtonsContainer = document.getElementById('server-buttons-container');
    const selectedMovieTitle = document.getElementById('selected-movie-title'); 
    // Removed: const selectedMovieImage = document.getElementById('selected-movie-image'); 
    const selectedMovieNameText = document.getElementById('selected-movie-name-text'); 
    const loadingMessage = document.getElementById('loading-message');
    const searchInput = document.getElementById('search-input');
    const categorySelect = document.getElementById('category-select');
    
    let allMatchData = {};
    let currentMatchKey = null;
    let currentServerKey = 's1'; 

    // --- Core Functions ---
    
    function extractTimeAndDescription(channels) {
        if (!channels || channels.length === 0) return { time: 'N/A', description: 'No Details' };
        
        const firstItem = channels[0];
        const timeText = firstItem.channel_name ? firstItem.channel_name.trim() : 'Date N/A';
        const descriptionText = firstItem.url || 'Description N/A';

        return { time: timeText, description: descriptionText };
    }

    /**
     * Renders the horizontally scrolling quality options, now with integrated download icons.
     */
    function renderServerButtons(channels) {
        serverButtonsContainer.innerHTML = '';
        
        const qualityChannels = channels.filter((c, index) => 
            index > 0 && c.channel_name && c.channel_name.toUpperCase().includes('P')
        );

        qualityChannels.forEach((channel, index) => {
            const serverKey = `s${index + 1}`;
            const qualityText = channel.channel_name.trim() || `Link ${index + 1}`;
            const originalStreamUrl = channel.url; // The non-proxied link for download

            const optionDiv = document.createElement('div');
            optionDiv.className = `channel-option`;
            optionDiv.dataset.serverKey = serverKey;
            
            // Channel Name (The Play/Select button area)
            const nameDiv = document.createElement('div');
            nameDiv.className = 'channel-name';
            nameDiv.textContent = qualityText;
            nameDiv.title = `Play ${qualityText}`;

            // Download Icon (The Download link area)
            const downloadDiv = document.createElement('div');
            downloadDiv.className = 'download-icon';
            downloadDiv.innerHTML = DOWNLOAD_ICON_HTML; 
            downloadDiv.title = `Download ${qualityText}`;

            optionDiv.appendChild(nameDiv);
            optionDiv.appendChild(downloadDiv);


            if (serverKey === currentServerKey) {
                optionDiv.classList.add('active');
            }

            // 1. Event listener for playing the stream (clicking the name/tab area)
            nameDiv.addEventListener('click', function(event) {
                event.stopPropagation(); 
                
                document.querySelectorAll('.channel-option').forEach(b => b.classList.remove('active'));
                optionDiv.classList.add('active');

                currentServerKey = serverKey;
                updateStream(originalStreamUrl); 
            });
            
            // 2. Event listener for downloading (clicking the download icon)
            downloadDiv.addEventListener('click', function(event) {
                event.stopPropagation(); 
                window.open(originalStreamUrl, '_blank'); 
            });


            serverButtonsContainer.appendChild(optionDiv);
        });
        
        // Auto-select the first quality option on render
        if(qualityChannels.length > 0) {
            currentServerKey = 's1';
            updateStream(qualityChannels[0].url);
        } else {
            streamIframe.src = 'about:blank';
        }
    }
    
    /**
     * Updates the iframe source using the proxy URL.
     * @param {string} originalUrl - The direct stream URL.
     */
    function updateStream(originalUrl) {
        if (!originalUrl) {
            streamIframe.src = 'about:blank';
            return;
        }
        
        // Apply the proxy URL to the original stream URL
        const proxiedUrl = PROXY_URL + encodeURIComponent(originalUrl);
        streamIframe.src = proxiedUrl;
    }

    function filterMatches() {
        const query = searchInput.value.toLowerCase();
        const cards = matchListContainer.querySelectorAll('.match-card');

        cards.forEach(card => {
            const searchableText = card.dataset.searchableText.toLowerCase();
            
            if (searchableText.includes(query)) {
                card.style.display = 'flex'; 
            } else {
                card.style.display = 'none'; 
            }
        });
    }

    function selectMatch(matchKey) {
        currentMatchKey = matchKey;
        const channels = allMatchData[matchKey];
        // const imageSrc = (channels[0] && channels[0].image) ? channels[0].image : 'https://via.placeholder.com/30x45?text=Img';
        
        currentServerKey = 's1'; 

        renderServerButtons(channels);
        
        // Update the selected title display with only the name
        // selectedMovieImage.src = imageSrc; // Removed
        selectedMovieNameText.textContent = matchKey.toLowerCase(); 

        // Visual selection in the list
        document.querySelectorAll('.match-card').forEach(card => {
            card.classList.remove('active');
        });
        
        const selectedCard = document.querySelector(`.match-card[data-match-key="${matchKey}"]`);
        if(selectedCard) {
            selectedCard.classList.add('active');
        }
    }

    function renderMatchList() {
        if (loadingMessage) loadingMessage.remove();
        matchListContainer.innerHTML = '';
        
        for (const [matchKey, channels] of Object.entries(allMatchData)) {
            const firstItem = channels[0] || {};
            const imageSrc = firstItem.image ? firstItem.image : 'https://via.placeholder.com/80x120?text=Poster+N/A';
            
            const { time, description } = extractTimeAndDescription(channels);

            const searchableText = `${matchKey} ${time} ${description}`;
            
            const card = document.createElement('div');
            card.className = 'match-card';
            card.dataset.matchKey = matchKey;
            card.dataset.searchableText = searchableText; 
            
            card.innerHTML = `
                <div class="match-info">
                    <img src="${imageSrc}" alt="${matchKey} Poster">
                    <div class="match-details">
                        <div class="match-name">${matchKey}</div>
                        <div class="match-date">${time}</div> 
                        <div class="match-description">${description}</div> 
                    </div>
                </div>
                <span class="arrow">›</span>
            `;
            
            card.addEventListener('click', () => selectMatch(matchKey));
            
            matchListContainer.appendChild(card);
        }
        
        const firstMatchKey = Object.keys(allMatchData)[0];
        if (firstMatchKey) {
            selectMatch(firstMatchKey);
        } else {
            // selectedMovieImage.src = 'https://via.placeholder.com/30x45?text=N/A'; // Removed
            selectedMovieNameText.textContent = "No movies found in this category.";
        }
    }
    
    function setupCategorySelector() {
        categorySelect.innerHTML = ''; 

        for (const [name, url] of Object.entries(CATEGORIES)) {
            const option = document.createElement('option');
            option.value = url;
            option.textContent = name;
            categorySelect.appendChild(option);
            
            if (url === currentCategoryUrl) {
                option.selected = true;
            }
        }
        
        categorySelect.addEventListener('change', function() {
            currentCategoryUrl = this.value;
            searchInput.value = ''; 
            init();
        });
    }

    async function init() {
        matchListContainer.innerHTML = '';
        const msg = document.createElement('p');
        msg.id = 'loading-message';
        msg.textContent = 'Loading schedule...';
        matchListContainer.appendChild(msg);
        
        streamIframe.src = 'about:blank';
        serverButtonsContainer.innerHTML = ''; 
        // selectedMovieImage.src = 'https://via.placeholder.com/30x45?text=Img'; // Removed
        selectedMovieNameText.textContent = 'Loading...';

        try {
            const response = await fetch(currentCategoryUrl);
            
            if (!response.ok) {
                throw new Error(`HTTP error! Status: ${response.status}`);
            }

            allMatchData = await response.json();
            
            if (!allMatchData || typeof allMatchData !== 'object' || Array.isArray(allMatchData)) {
                throw new Error("Invalid data structure received.");
            }
            
            renderMatchList();

        } catch (error) {
            console.error('Failed to load schedule:', error);
            if (document.getElementById('loading-message')) {
                document.getElementById('loading-message').textContent = `Error loading content. Please check the JSON URL.`;
                document.getElementById('loading-message').style.color = 'red';
                selectedMovieNameText.textContent = 'Error loading content.';
            }
        }
    }

    // --- Initialization ---
    setupCategorySelector();
    searchInput.addEventListener('input', filterMatches);

    init();
</script>

</body>
</html>







